{% extends 'base.html.twig' %}

{% block content %}
    <section>
        <div class="container col-md-8 border">
            {% for post in singlePost %}
                <p>
                    <div class="h1">{{ post.title }}</div>
                    <div class="h3">{{ post.leadParagraph }}</div>
                    <div class="border">{{ post.content }}</div>
                </p>
                <p>
                    <div align="right">Auteur : {{ post.user.firstName }} {{ post.user.lastName }}</div>
                    <div align="right">Date de modification : {{ post.modifiedDate }}</div>
                </p>
            {% endfor %}
        </div>
        <div class="container col-md-8">
            Commentaires :
            {% for comment in comments %}
                <div class="border p-2">
                    <p>
                        <div>{{ comment.message }}</div>
                    </p>
                    <p>
                        <div align="right">Auteur : {{ comment.user.firstName }} {{ comment.user.lastName }}</div>
                        <div align="right">Date: {{ comment.createdDate }}</div>
                    </p>
                </div>
            {% endfor %}
        </div>

    </section>
{% endblock %}